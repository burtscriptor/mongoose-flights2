<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Qantas">Qantus</option>
    <option value="Jetstar">Jetstar</option>
  </select>
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="CCH">CCH</option>
    <option value="DFW">DFW</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <label>Flight Number:</label>
  <input type="text" name="flightNo">
  <label>Departure Date:</label>
  <input type="datetime-local" name="departs" value="2024-02-26T12:30"
  min="2024-02-26T12:30" max="2030-02-26T12:30">
  <!-- <label>Arrival</label>
  <input type="datetime-local" name="arrival" value="2024-02-26T12:30"
  min="2024-02-26T12:30" max="2030-02-26T12:30"> -->
  <input type="submit" value="Add flight">
</form>

<%- include('../partials/footer') %>
